{
  "name": "heartbit-wallet-lightning",
  "version": "1.0.0",
  "description": "heartbit wallet server to run lightning node",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon",
    "build": "concurrently \"rimraf ./build\" \"npx tsc -w\"",
    "start": "concurrently \"npm run build\" \"nodemon -q build/index.js\"",
    "lint": "eslint 'src/**/*.ts' --ignore-path ./.eslintignore",
    "lint:fix": "eslint --fix 'src/**/*.ts' --ignore-path ./.eslintignore",
    "format": "prettier 'src/**/*.ts' --ignore-path ./.prettierignore",
    "format:fix": "prettier --write 'src/**/*.ts' --ignore-path ./.prettierignore",
    "db:migrate": "npx sequelize-cli db:migrate",
    "undo:migration": "npx sequelize-cli db:migrate:undo:all",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:migrate-seed": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heartbit-io/heartbit-wallet-lightning.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/heartbit-io/heartbit-wallet-lightning/issues"
  },
  "homepage": "https://github.com/heartbit-io/heartbit-wallet-lightning#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.0",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@types/sequelize": "^4.28.14",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "lightning": "^8.0.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.31.0",
    "swagger-ui-express": "^4.6.2",
    "winston": "^3.8.2"
  }
}
